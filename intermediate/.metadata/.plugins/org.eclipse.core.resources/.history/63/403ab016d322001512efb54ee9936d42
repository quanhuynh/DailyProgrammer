import java.awt.Color;
import java.util.List;
import java.awt.image.BufferedImage;

public class Ant {
	
	private List<Color> colors;
	private static final int DIMENSION = 512;
	private String sequence;
	private int sequenceLength;
	private int xCoord, yCoord;
	private BufferedImage img;
	private int curIndex;
	
	public Ant(String sequence, int steps) {
		this.sequence = sequence;
		sequenceLength = sequence.length();
		curIndex = 0;
		xCoord = DIMENSION/2;
		yCoord = DIMENSION/2;
		img = new BufferedImage(DIMENSION, DIMENSION, BufferedImage.TYPE_INT_RGB);
		colors.add(Color.white);
		colors.add(Color.black);
		colors.add(Color.lightGray);
		colors.add(Color.darkGray);
		colors.add(Color.gray);
		runAnt(steps);
		
	}
	
	public void runAnt(int steps) {
		while (steps > 0) {
			Color curColor = colors.get(curIndex);
			img.setRGB(xCoord, yCoord, curColor.getRGB());
			changeDir(sequence.charAt(curIndex)+"");
			if (curIndex+1 == sequenceLength) {
				curIndex = 0;
			} else {
				curIndex++;
			}
			steps--;
		}
	}
	
	public void changeDir(String direction) {
		
	}
	
	public static void main(String args[]) {
		int steps = Integer.parseInt(args[1]);
		new Ant(args[0], steps);
	}
}
